@model IEnumerable<Literati.Models.DisplayUploadsViewModel>

@{
	ViewData["Title"] = "Private Page";
}
<br/><h2 class="text-center text-bold text-success">UNDEFINED | ALL Stories</h2>
<div style="display:flex;flex-direction:row; flex-wrap:wrap; justify-content:center;align-content:center;align-items:center">

	@foreach (var item in Model)
	{
		<div class="card" style="width: 18rem; display:flex;justify-content:center; align-content:center; align-items:center; text-align:center; margin:20px 20px 20px 20px;">
			<h3 class="">@item.Title</h3>
			<img src="~/Uploads/@item.HasedFilePath" class="card-img-top" alt="..." width="250px;" height="150px;" />
			<div class="card-body">
				<span class="date">@item.UploadDate</span>
				<p class="card-text">@item.Description</p>
				<a asp-action="Info" asp-controller="Upload" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-primary">Full Story</a>
				<a asp-action="Delete" asp-controller="Upload" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
				<a asp-action="Update" asp-controller="Upload" asp-route-id="@item.Id" class="btn btn-success">Update</a>
			</div>
		</div>
	}
</div>
