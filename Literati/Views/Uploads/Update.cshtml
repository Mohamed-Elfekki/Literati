@using Literati.Constants;
@model Literati.Models.UpdateUploadsViewModel
@{
	ViewData["Title"] = "UPDATE Page";
}
<!-- Wrapper -->
<div id="wrapper" class="fade-in">

	<!-- Intro -->
	<div id="intro">
		<h1>
			UPDATE<br />
			PAGE
		</h1>
		<ul class="actions">
			<li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
		</ul>
	</div>

	<!-- Header -->
	<header id="header">
		<a href="index.html" class="logo">UNDEFINED</a>
	</header>

	<!-- Nav -->
	<nav id="nav" style="display:flex; flex-direction:row; justify-content:space-between">
		<div>
			<ul class="links">
				<li ><a asp-controller="Home" asp-action="Index">Home</a></li>
				@if (User.Identity.IsAuthenticated && !(User.IsInRole(UserRoles.Admin)))
				{
						<li class="active"><a asp-action="Create" asp-controller="Uploads" class="icon brands fa-pushed text-success"><span class="label">UPDATE</span>&nbspUPDATE</a></li>
						<li><a asp-action="Private" asp-controller="Uploads" class="text-danger"><span class="label"></span>&nbspPRIVATE</a></li>
				}
				<li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
			</ul>

		</div>

		@if (User.Identity.IsAuthenticated)
		{
				<div>
					<ul class="links">
						<li><a asp-controller="Account" asp-action="Profile">PROFILE</a></li>
						<li><a asp-action="Logout" asp-controller="Account">LOGOUT</a></li>
					</ul>
				</div>
		}
		else
		{
				<div>
					<ul class="links">
						<li><a asp-controller="Account" asp-action="Login">LOGIN</a></li>
						<li><a asp-action="Register" asp-controller="Account">REGISTER</a></li>
					</ul>
				</div>
		}
	</nav>
	<div id="footer">
	<div id="footer" style="max-width:50%; border-radius:25px;">
		<section>
			<form asp-route-id="@Model.Id" method="post" asp-action="Update" asp-controller="Uploads" enctype="multipart/form-data">
					<div class="fields" style="display:flex;flex-direction:column; justify-content:center;align-content:center;align-self:center;align-items:center;">
						<div class="field">
							<label>Image</label>
							<img class="image fit" src="~/Uploads/@Model.HasedFilePath" style="width:400px;height:200px" />
						</div>
						<div class="field">
							<label asp-for="File" id="custom-file-label" class="custom-file-label btn-outline-primary" for="customFile">Choose file</label>
							<input asp-for="File"  type="file" class="custom-file-input" id="customFile" accept="image/*">
							<span asp-validation-for="File" class="text-danger"></span>
						</div>
					<div class="field">
						<label asp-for="Title">Title</label>
						<input asp-for="Title" type="text" id="email" maxlength="20"/>
						<span asp-validation-for="Title"></span>
					</div>
					<div class="field">
						<label asp-for="Description">Description</label>
						<input asp-for="Description" type="text" id="email" />
						<span asp-validation-for="Description"></span>
					</div>
					<div class="field">
						<label asp-for="Fulldescription">Full Description</label>
						<textarea asp-for="Fulldescription" rows="5" id="email" style="resize:none;"></textarea>
						<span asp-validation-for="Fulldescription"></span>
					</div>
					<div class="actions">
						<br/><input type="submit" value="UPDATE" class="text-success" />
					</div>
				</div>
			</form>
		</section>
	</div>
		</div>
</div>


